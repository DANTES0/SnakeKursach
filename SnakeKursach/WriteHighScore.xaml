<Window x:Class="SnakeKursach.WriteHighScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeKursach"
        mc:Ignorable="d"
        Title="Запись рекордов" Height="200" Width="200" MinHeight="200" MaxHeight="200" MinWidth="200" MaxWidth="200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 x:Name="textBox"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" Text="У вас новый рекорд!!! Введите ваше имя" VerticalAlignment="Top" Height="43" Width="134" x:Name="Nick"
                   />
        <Button x:Name="btn" Content="Подтвердить" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Click="btn_Click"/>

    </Grid>
</Window>
